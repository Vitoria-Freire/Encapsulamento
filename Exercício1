class Pessoa:
    def __init__ (self, nome, idade):
        self.__nome = nome
        self.__idade = idade

    @property
    def nome(self):
        return self.__nome

    @property
    def idade(self):
        return self.__idade

    @nome.setter
    def nome(self, nome):
        self.__nome = nome

    @idade.setter
    def idade(self, idade):
        self.__idade = idade

nome = input ('Digite seu nome:')
idade = input ('Digite sua idade:')

p1 = Pessoa(nome, idade)
print(p1.nome)
print(p1.idade)
p1.nome = 'Lucas'
print(p1.nome)
p1.idade = '9'
print(p1.idade)
